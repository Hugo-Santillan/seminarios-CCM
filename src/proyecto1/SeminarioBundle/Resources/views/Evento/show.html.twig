{% extends 'SeminarioBundle::layout.html.twig' %}

{% block body -%}
    <br>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            {% for flashMessage in app.session.flashbag.get('notice') %}

                <div class="alert alert-success alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    {{ flashMessage }}
                </div>
            {% endfor %}
            <h3>Evento</h3>

            <table class="table">
                <tbody class=".table-hover">
                <tr>
                    <th>Lugar</th>
                    <td>{{ entity.lugar }}</td>
                </tr>
                <tr>
                    <th>Fecha</th>
                    <td>{{ entity.fecha|date('Y-m-d') }}</td>
                </tr>
                <tr>
                    <th>Hora</th>
                    <td>{{ entity.hora|date('H:i') }}</td>
                </tr>
                <tr>
                    <th>Ponente</th>
                    <td>{{ entity.ponente }}</td>
                </tr>
                <tr>
                    <th>Origen</th>
                    <td>{{ entity.origen }}</td>
                </tr>
                <tr>
                    <th>Platica</th>
                    <td>{{ entity.platica }}</td>
                </tr>
                <tr>
                    <th>Resumen</th>
                    <td>{{ entity.resumen }}</td>
                </tr>
                <tr>
                    <th>Comentario</th>
                    <td>{{ entity.coment }}</td>
                </tr>
                <tr>
                    <th>Creado</th>
                    <td>{{ entity.fechaCap|date('Y-m-d H:i:s') }}</td>
                </tr>
                <tr>
                    <th>Modificado</th>
                    <td>{{ entity.modified |date('Y-m-d H:i:s') }}</td>
                </tr>
                </tbody>
            </table>

            <ul class="list-inline">
                {% if is_granted('ROLE_ADMIN') %}
                <li>{{ form(delete_form) }}</li>
                <li><a href="{{ path('evento_edit', { 'id': entity.id }) }}" class="btn btn-default">Editar </a></li>
                {% endif %}
                <li><a href="{{ path('evento') }}" class="btn btn-primary" >Ir a lista</a></li>
            </ul>
        </div>
    </div>
{% endblock %}
