{% extends 'SeminarioBundle::layout.html.twig' %}
{% block body -%}
    <h1>Eventos Anteriores</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Lugar</th>
                <th>Fecha</th>
                <th>Hora</th>
                <th>Ponente</th>
                <th>Origen</th>
                <th>Platica</th>
                <th>Resumen</th>
                <th>Coment</th>
                <th>Fechacap</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('evento_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.lugar }}</td>
                <td>{% if entity.fecha %}{{ entity.fecha|date('Y-m-d') }}{% endif %}</td>
                <td>{% if entity.hora %}{{ entity.hora|date('H:i:s') }}{% endif %}</td>
                <td>{{ entity.ponente }}</td>
                <td>{{ entity.origen }}</td>
                <td>{{ entity.platica }}</td>
                <td>{{ entity.resumen }}</td>
                <td>{{ entity.coment }}</td>
                <td>{% if entity.fechaCap %}{{ entity.fechaCap|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('evento_show', { 'id': entity.id }) }}">show</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}
