{% extends 'SeminarioBundle::layout.html.twig' %}
{% block body -%}

    {% if app.user and is_granted('ROLE_USER') %}
        <p>Username: {{ app.user.username }}</p>
    {%  endif %}
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <p>Username: {{ app.user.username }}</p>
    {% endif %}
    <h4>Lista de Eventos</h4>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Seminario</th>
                <th>Lugar</th>
                <th>Fecha</th>
                <th>Hora</th>
                <th>Ponente</th>
                <th>Origen</th>
                <th>Platica</th>
                <th>Resumen</th>
                <th>Coment</th>
                <th>Fechacap</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody class=".table-hover">
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('evento_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.seminario }}</td>
                <td>{{ entity.lugar }}</td>
                <td>{% if entity.fecha %}{{ entity.fecha|date('Y-m-d') }}{% endif %}</td>
                <td>{% if entity.hora %}{{ entity.hora|date('H:i:s') }}{% endif %}</td>
                <td>{{ entity.ponente }}</td>
                <td>{{ entity.origen }}</td>
                <td>{{ entity.platica }}</td>
                <td>{{ entity.resumen | wordwrap(100) | nl2br }}</td>
                <td>{{ entity.coment }}</td>
                <td>{% if entity.fechaCap %}{{ entity.fechaCap|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('evento_show', { 'id': entity.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('evento_edit', { 'id': entity.id }) }}">edit</a>
                        </li>
                        <li>
                            <a href="{{ path('eventos_anteriores',{'seminario': entity.seminario.id}) }}">
                                Eventos anteriores
                            </a>
                        </li>

                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('seminario') }}">
                Crear Evento
            </a>
        </li>
    </ul>

{% endblock %}
