{% extends 'SeminarioBundle::layout.html.twig' %}
{% block body -%}
    <br><br>
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            {% for flashMessage in app.session.flashbag.get('notice') %}

                <div class="alert alert-success alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    {{ flashMessage }}
                </div>

            {% endfor %}
            <br>
            <legend><i class="fa fa-users"></i>&nbsp;Lista responsables</legend>
                    <p>
                    <a href="{{ path('responsable_new') }}" class="btn btn-primary btn-sm" role="button">
                        Nuevo Responsable
                    </a>

                    </p>

            <br>
            <table id="myTable"  class="display" >
                <thead>
                <tr>

                    <th>Nombre</th>
                    <th>Apellidos</th>
                    <th>Email</th>
                    <th>Institucion</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('responsable_show', { 'id': entity.id }) }}">{{ entity.nombre }}</a></td>
                        <td>{{ entity.apellidos }}</td>
                        <td>{{ entity.email }}</td>
                        <td>{{ entity.institucion }}</td>
                        <td>

                            <a href="{{ path('responsable_edit', { 'id': entity.id }) }}" class="btn btn-default btn-xs"><i class="fa fa-pencil-square-o"></i>&nbsp;editar</a>

                        </td>
                    </tr>
                {% endfor %}
                </tbody>
        </div>
    </div>

{% endblock %}
