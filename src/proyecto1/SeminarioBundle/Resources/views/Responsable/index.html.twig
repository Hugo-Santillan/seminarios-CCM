{% extends 'SeminarioBundle::layout.html.twig' %}

{% block body -%}
    <br>
    <h1>Lista responsables</h1>
    <br>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Apellidos</th>
                <th>Email</th>
                <th>Institucion</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody class=".table-hover">
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('responsable_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.apellidos }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.institucion }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('responsable_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('responsable_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('responsable_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
