{% extends 'SeminarioBundle::layout.html.twig' %}

{% block body -%}
    <br>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            {% for flashMessage in app.session.flashbag.get('notice') %}

                <div class="alert alert-success alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    {{ flashMessage }}
                </div>

            {% endfor %}


            {{ form_start(edit_form) }}
            {{ form_errors(edit_form) }}
            <fieldset>
                <legend>Datos de Seminario</legend>
                <br>

                <div class="form-group">
                    {{ form_label(edit_form.nombre,'Nombre:') }}
                    {{ form_errors(edit_form.nombre) }}
                    {{ form_widget(edit_form.nombre,{'attr':{'class':'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(edit_form.lugar,'Lugar:') }}
                    {{ form_errors(edit_form.lugar) }}
                    {{ form_widget(edit_form.lugar,{'attr':{'class':'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(edit_form.hora,'Hora:') }}
                    {{ form_errors(edit_form.hora) }}
                    {{ form_widget(edit_form.hora) }}
                </div>
                <div class="form-group checkbox">
                    <label>
                        {{ form_errors(edit_form.estatus) }}
                        {{ form_widget(edit_form.estatus) }}
                        Activo
                    </label>
                </div>
                <div class="form-group">
                    {{ form_label(edit_form.responsables,'Responsables:') }}
                    {{ form_errors(edit_form.responsables) }}
                    {{ form_widget(edit_form.responsables,{'attr':{'class':'select2 form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_widget(edit_form.submit,{'attr':{'class':'btn btn-default'}}) }}
                </div>


                {{ form_end(edit_form) }}
            </fieldset>


            <div class="row">
                <div class="col-md-2">{{ form(delete_form) }}</div>
                <div class="col-md-2"><a href="{{ path('seminario') }}" class="btn btn-default" >Ir a lista</a></div>
            </div>

             </div>
    </div>
{% endblock %}
