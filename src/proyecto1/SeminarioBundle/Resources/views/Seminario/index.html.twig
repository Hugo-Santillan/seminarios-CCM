{% extends 'SeminarioBundle::layout.html.twig' %}
{% block body -%}
    <br>
    <h4>Listado</h4>
    <table class="table table-hover">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Lugar</th>
            <th>Hora</th>
            <th>Estatus</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody class=".table-hover">
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('seminario_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.lugar }}</td>
                <td>{% if entity.hora %}{{ entity.hora | date('H:i:s') }}{% endif %}</td>
                <td>{{ entity.estatus }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('seminario_show', { 'id': entity.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('seminario_edit', { 'id': entity.id }) }}"><i class="fa fa-pencil fa-fw"></i>Editar</a>
                        </li>
                        <li>
                             <a href="{{ path('evento_new', { 'id': entity.id }) }}">Crear Evento</a>
                            {# <a href="http://localhost/sd/app_dev.php/evento/{{ entity.id }}/new">Crear Evento</a> #}
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('seminario_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>

{% endblock %}
