{% extends 'SeminarioBundle::layout.html.twig' %}
{% block nav %}

    <li>
        <a href="{{ path('seminario_new') }}">
            Crear Seminario
        </a>
    </li>
{% endblock %}
{% block body -%}
<br>
<div class="row">
    <div class="col-md-8 col-md-offset-2">
        {% for flashMessage in app.session.flashbag.get('notice') %}

            <div class="alert alert-success alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                {{ flashMessage }}
            </div>

        {% endfor %}
        <legend>Lista seminarios</legend>
        <br>
    <table class="table table-hover">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Lugar</th>
            <th>Hora</th>
            <th>Acciones</th>
        </tr>
        </thead>
        <tbody class=".table-hover">
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('seminario_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.lugar }}</td>
                <td>{% if entity.hora %}{{ entity.hora | date('H:i:s') }}{% endif %}</td>
                <td> <a class="btn btn-default btn-xs" href="{{ path('seminario_edit', { 'id': entity.id }) }}"><i class="fa fa-pencil fa-fw"></i>Editar</a> | <a class="btn btn-default btn-xs" href="{{ path('evento_new', { 'id': entity.id }) }}">Crear Evento</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
    </div>

{% endblock %}
