{% extends 'SeminarioBundle::layout.html.twig' %}
{% block body %}
<br><br>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <br><br>

            {{ form_start(form) }}
            {{ form_errors(form) }}
            <fieldset>
                <legend><i class="fa fa-book"></i>  Datos de Seminario</legend>
                <br>
                <div class="form-group">
                    {{ form_label(form.responsables,'Responsables:') }}
                    {{ form_errors(form.responsables) }}
                    {{ form_widget(form.responsables,{'attr':{'class':'select2 form-control','placeholder':'Requerido: responsable o lista de responsables'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.nombre,'Nombre:') }}
                    {{ form_errors(form.nombre) }}
                    {{ form_widget(form.nombre,{'attr':{'class':'form-control','placeholder':'Nombre'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.lugar,'Lugar:') }}
                    {{ form_errors(form.lugar) }}
                    {{ form_widget(form.lugar,{'attr':{'class':'form-control','placeholder':'Lugar'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.hora,'Hora:') }}
                    {{ form_errors(form.hora) }}
                    {{ form_widget(form.hora) }}
                </div>
                <div class="form-group checkbox">
                    <label>
                        {{ form_errors(form.estatus) }}
                        {{ form_widget(form.estatus) }}
                        Activo
                    </label>
                </div>
                <br>


            </fieldset>

            <div>
                {#{{ form_label(form.submit,'Guardar') }}#}
                {{ form_widget(form.submit,{'label':'Guardar'},{'attr':{'class':'btn btn-default'}}) }}

            </div>
            {{ form_end(form) }}

            <br>
                    <a href="{{ path('seminario') }}" class="btn btn-default" >
                        Regresar a lista
                    </a>


        </div>
    </div>
{% endblock %}

